{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc","closure"]
  },
  "source": {
    "include": ["src", "__TESTS__"],
    "includePattern": ".+\\.ts(doc|x)?$"
  },
  "plugins": [
    "plugins/markdown",
    "node_modules/better-docs/typescript"
  ],
  "typescript": {
    "moduleRoot": "src"
  },
  "templates": {
    "cleverLinks": true,
    "navMembers" : [
      {"kind": "namespace", "title": "Actions & Qualifiers", "summary": "All documented namespaces."},
      {"kind": "interface", "title": "Interfaces", "summary": "All documented interfaces."},
      {"kind": "tutorial", "title": "Help & Examples", "summary": "All available tutorials."}
    ],
    "stylesheets" : [
      "./customStyles.css"
    ],
    "search": true,
    "monospaceLinks": true,
    "systemColor": "#3448C5",
    "systemName": "Cloudinary JS SDK v2",
    "systemLogo": "__DOC_RESOURCES__/navLogo.png",
    "systemSummary": "@cloudinary/base",
    "favicon": "__DOC_RESOURCES__/favico.png",
    "copyright": "Copyright Â© 2021 Cloudinary.com"
  },
  "opts": {
    "recurse": true,
    "readme": "README.md",
    "template": "./__docTemplate/template"
  }
}
